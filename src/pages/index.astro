---
import Layout from '../layouts/Layout.astro';
import { ArrowRight, Github, Package } from 'lucide-react';
import { Button } from "@/components/ui/neumorphic/button";
import { Card, CardContent } from "@/components/ui/neumorphic/card";
import { ThemeToggle } from "@/components/theme-toggle";
import '@/styles/neumorphic.css';

---

<Layout title="Neumorphic UI - Modern Soft UI Components">
  <main class="min-h-screen bg-background">
    <ThemeToggle client:load />
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-primary to-primary/60 bg-clip-text text-transparent">
          Neumorphic UI
        </h1>
        <p class="text-xl text-muted-foreground mb-8">
          Beautiful, modern soft UI components for Astro and React
        </p>
        <div class="flex gap-4 justify-center">
          <a href="/components" >
          <Button variant="default">
           
            View Components
          
        
          <ArrowRight className="ml-2 h-4 w-4" />
          </Button>
        </a>
          <Button variant="pressed">
            <Github className="mr-2 h-4 w-4" />
            GitHub
          </Button>
        </div>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <Card className="p-6">
          <CardContent>
            <Package className="h-12 w-12 mb-4 text-primary" />
            <h3 class="text-xl font-semibold mb-2">Modern Design</h3>
            <p class="text-muted-foreground">
              Soft shadows and subtle gradients create a modern, elegant look
            </p>
          </CardContent>
        </Card>
        <Card className="p-6">
          <CardContent>
            <Package className="h-12 w-12 mb-4 text-primary" />
            <h3 class="text-xl font-semibold mb-2">Fully Customizable</h3>
            <p class="text-muted-foreground">
              Tailwind CSS powered components that are easy to customize
            </p>
          </CardContent>
        </Card>
        <Card className="p-6">
          <CardContent>
            <Package className="h-12 w-12 mb-4 text-primary" />
            <h3 class="text-xl font-semibold mb-2">Dark Mode</h3>
            <p class="text-muted-foreground">
              Seamless dark mode support with perfect contrast
            </p>
          </CardContent>
        </Card>
      </div>
    </div>
    
 
  </main>
</Layout>
